{
	"compilerOptions": {
		"target": "ES2020",      // 编译目标ES版本
		"module": "CommonJS",    // 模块系统类型
		"outDir": "./dist",      // 输出目录
		"rootDir": "./src",      // 源代码目录
		"strict": true,          // 启用所有严格类型检查
		"esModuleInterop": true, // 支持CommonJS/ES模块互操作
		"sourceMap": true        // 生成sourcemap用于调试
	},
	"include": [                 // 包含的文件
		"src/**/*.ts"
	],
	"exclude": [                 // 排除的文件
		"node_modules"
	] 
}